<center>
<h1> All Shelters </h1>
<% @shelters.each do |shelter| %>
<h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>

<section class="grid-shelter"id="shelter-<%=shelter.id%>">
  <p><%= shelter.address %></p>
  <p><%= shelter.city %></p>
  <p><%= shelter.state %></p>
  <p><%= shelter.zip %></p>
  <%= link_to "Edit", "/shelters/#{shelter.id}/edit" %>
  <%= link_to "Delete", "/shelters/#{shelter.id}", method: :delete %>
  </section>

<% end %>
<%= link_to 'New Shelter', '/shelters/new' %>
</center>
