<h1> Pet Info </h1>
  <p><%= image_tag(@pet.image, size: "200x300") %></p>
  <p><%= @pet.name %></p>
  <p><%= @pet.description %></p>
  <p><%= @pet.age %></p>
  <p><%= @pet.sex %></p>
  <p><%= @pet.adoption_status %></p>
